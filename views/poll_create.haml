.banner.create-event-banner
%h2
  ¡Hola #{session['name']}!
  Completá estos datos
  para crear el encuentro
%form{method: 'POST'}
  %label{for: 'title'} Titulo del evento
  %input{id: 'title', name: 'title', placeholder: 'Por ejemplo: Salida de amigos...', required: true, type: 'text'}
  %label{for: 'guests'} Invitados
  %input{id: 'guests', name: 'guests', required: true, type: 'number'}
  %section.grey-container.flex
    %h3 Días posibles
    %ul
      %li
        %input{type: 'checkbox', name: "date[0]", value: '22/12'}
        %span 22/12
      %li
        %input{type: 'checkbox', name: "date[1]", value: '23/12'}
        %span 23/12
      %li
        %input{type: 'checkbox', name: "date[2]", value: '24/12'}
        %span 24/12
    %button.outline + Agregar otro dia
  %section.time
    %h3 Horarios
    %input{checked: 'checked', name: 'time', type: 'radio', value: 'Almuerzo'}
    %span Almuerzo
    %input{name: 'time', type: 'radio', value: 'Cena'}
    %span Cena
  %section.grey-container.flex
    %h3 Barrios posibles
    %ul
      %li
        %input{type: 'checkbox', name: "zone[0]", value: 'Palermo'}
        %span Palermo
      %li
        %input{type: 'checkbox', name: "zone[1]", value: 'Belgrano'}
        %span Belgrano
      %li
        %input{type: 'checkbox', name: "zone[2]", value: 'Recoleta'}
        %span Recoleta
    %button.outline + Agregar otro barrio
  %section.limit-date
    %h3 Fecha limite
    %ul
      %li
        %input{type: 'checkbox', name: "expiration", value: '22/12'}
        %span 22/12
    %input{type: 'checkbox', name: 'visibility', value: 'true'}
    %span Mis invitados pueden ver los resultados a medida que se completan
  %button ¡Finalizar!
