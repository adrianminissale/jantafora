.banner.login-banner
.login-form
  %h2
    ¡Excelente, sos el anfitrión!
    %br
    ¿Cómo te llamás?
  %form{method: 'POST'}
    %label{for: 'name'} Nombre y apellido
    %input{name: 'name', id: 'name', placeholder: 'Ingresa tu nombre o un apodo', required: true, type: 'text'}
    %label{for: 'mail'} Correo electrónico
    %input{name: 'mail', id: 'mail', placeholder: 'Ingresa una cuenta de correo valida', required: true, type: 'email'}
    %button{type: 'submit'} Iniciar
